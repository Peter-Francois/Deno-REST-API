modules = ["deno"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deno REST API Server"

[[workflows.workflow]]
name = "Deno REST API Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno run --allow-net --allow-read --allow-write app.ts"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "deno run --allow-net --allow-read --allow-write app.ts"]

[[ports]]
localPort = 5000
externalPort = 80
